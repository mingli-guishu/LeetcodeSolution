class Solution {
    // 162 Medium 寻找峰值 find-peak-element
    public int findPeakElement(int[] nums) {
        // 三分模板
        int l = 0, r = nums.length - 1;
        while (l < r) {
            int lmid = (l + r) / 2;
            int rmid = lmid + 1;
            if (nums[lmid] < nums[rmid])
                l = lmid + 1;
            else
                r = rmid - 1;
        }
        return l;
    }
}

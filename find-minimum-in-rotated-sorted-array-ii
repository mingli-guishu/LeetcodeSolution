class Solution {
    // 154 Hard 寻找旋转排序数组中的最小值Ⅱ find-minimum-in-rotated-sorted-array-ii
    public int findMin(int[] nums) {
        int l = 0, r = nums.length - 1;
        // 找到使得二分可以正确使用的index
        while (l <= r && nums[l] == nums[r])
            l++;
        while (l < r) {
            int mid = (l + r) >> 1;
            if (nums[mid] <= nums[r])
                r = mid;
            else
                l = mid + 1;
        }
        return nums[r];
    }
}

class Solution {
    // 58 Easy 最后一个单词的长度 length-of-last-word
    public int lengthOfLastWord(String s) {
        s = s.trim(); // 去除前后空格 
        int ans = 0;
        for (int i = s.length() - 1; i >= 0; i--) {
            if (s.charAt(i) == ' ')
                break;
            ans++;
        }
        return ans;
    }
}

class Solution {
    // 46 Medium 全排列 permutations
    List<List<Integer>> ans;
    List<Integer> set;
    boolean[] check;// 记录哪些数使用过了
    int len;
    public List<List<Integer>> permute(int[] nums) {
        this.len = nums.length;
        check = new boolean[len];
        ans = new ArrayList<List<Integer>>();
        set = new ArrayList<Integer>();
        getans(nums, 0);
        return ans;
    }

    private void getans(int[] nums, int count) {
        // 终止条件
        if (count == len) {
            ans.add(new ArrayList<Integer>(set));
            return;
        }
        for (int i = 0; i < len; i++) {
            if (check[i] == false) {
                set.add(nums[i]);
                check[i] = true;
                getans(nums, count + 1);
                set.remove(set.size() - 1);
                check[i] = false;
            }
        }
    }
}

class Solution {
    // 680 Easy 验证回文字符串Ⅱ valid-palindrome-ii
    public boolean validPalindrome(String s) {
        return validPalindrome(s, true, 0, s.length() - 1);
    }

    private boolean validPalindrome(String s, boolean delete, int l, int r) {
        while (l < r) {
            if (s.charAt(l) == s.charAt(r)) {
                l++;
                r--;
            } else {
                if (delete)
                    return validPalindrome(s, false, l + 1, r) || validPalindrome(s, false, l, r - 1);
                else return false;
            }
        }
        return true;
    }
}

class Solution {
    // 450 Medium 删除二叉搜索树中的节点 delete-node-in-a-bst
    public TreeNode deleteNode(TreeNode root, int key) {
        if (root == null)
            return null;
        if (root.val == key) {
            if (root.left == null)
                return root.right;
            if (root.right == null)
                return root.left;
            TreeNode next = root.right;
            while(next.left != null) // 后驱来代替
                next = next.left;
            root = deleteNode(root, next.val);
            root.val = next.val;
            return root;
        }
        if (root.val > key)
            root.left = deleteNode(root.left, key);
        else
            root.right = deleteNode(root.right, key);
        return root;
    }
}

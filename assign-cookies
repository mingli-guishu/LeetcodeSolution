class Solution {
    // 455 Easy 分发饼干 assign-cookies
    public int findContentChildren(int[] g, int[] s) {
        Arrays.sort(g);
        Arrays.sort(s);
        int g_index = g.length - 1;
        int ans = 0;
        for (int i = s.length - 1; i >= 0; i--) {
            while (g_index >= 0 && s[i] < g[g_index])// 把饼干给刚好可以填饱的child
                g_index--;
            if (g_index < 0)
                break;
            ans++;
            g_index--;
        }
        return ans;
    }
}

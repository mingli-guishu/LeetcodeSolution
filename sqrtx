class Solution {
    // 69 Easy x的平方根 sqrtx
    public int mySqrt(int x) {
        // 找最大的ans，使得ans ^ 2 <= x
        long l = 0, r = (long)x;
        while (l < r) {
            long mid = (l + r + 1) >> 1;
            if (mid * mid <= x)
                l = mid;
            else
                r = mid - 1;
        }
        return (int)r;
    }
}

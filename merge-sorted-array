class Solution {
    // 88 Easy 合并两个升序数组 merge-sorted-array
    public void merge(int[] nums1, int m, int[] nums2, int n) {
        // 三个指针，从后往前归并
        int i = m - 1, j = n - 1, k = m + n - 1;
        while (i >= 0 || j >= 0) {
            if(j == -1 || (i != -1 && nums1[i] >= nums2[j])) {
                nums1[k--] = nums1[i--];
            } else {
                nums1[k--] = nums2[j--];
            }
        }
    }
}

class MinStack {
    // 155 Easy 最小栈 min-stack
    Deque<Integer> stack;
    Deque<Integer> min_stack;
    /** initialize your data structure here. */
    public MinStack() {
        stack = new ArrayDeque<Integer>();
        min_stack = new ArrayDeque<Integer>();
        // 消除min_stack在Empty时的特殊性
        min_stack.push(Integer.MAX_VALUE);
    }
    
    public void push(int val) {
        stack.push(val);
        min_stack.push(Math.min(min_stack.peek(), val));
    }
    
    public void pop() {
        stack.pop();
        min_stack.pop();
    }
    
    public int top() {
        return stack.peek();
    }
    
    public int getMin() {
        return min_stack.peek();
    }
}

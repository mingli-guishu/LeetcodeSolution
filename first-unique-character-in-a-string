class Solution {
    // 387 Easy 字符串中的第一个唯一字符 first-unique-character-in-a-string
    public int firstUniqChar(String s) {
        HashMap<Character, Integer> map = new HashMap<>();
        int len = s.length();
        for (int i = 0; i < len; i++) {
            char cur = s.charAt(i);
            map.put(cur, map.getOrDefault(cur, 0) + 1);
        }
        for (int i = 0; i < len; i++)
            if (map.get(s.charAt(i)) == 1)
                return i;
        return -1;
    }
}

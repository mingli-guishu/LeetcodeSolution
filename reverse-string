class Solution {
    // 334 Easy 反转字符串 reverse-string
    public void reverseString(char[] s) {
        int l = 0, r = s.length - 1;
        while (l < r)
            s = swap(s, l++, r--);
    }

    private char[] swap(char[] s, int i, int j) {
        char tmp = s[i];
        s[i] = s[j];
        s[j] = tmp;
        return s;
    }
}
